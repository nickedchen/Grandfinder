<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.firebase.codelab.grandfinder.landingPage">


    <ImageView
        android:id="@+id/PhotoView"
        android:layout_width="335dp"
        android:layout_height="315dp"
        android:layout_marginStart="141dp"
        android:layout_marginEnd="142dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.177"
        app:srcCompat="@color/colorBlue" />

    <TextView
        android:id="@+id/bio1"
        android:layout_width="167dp"
        android:layout_height="86dp"
        android:layout_marginTop="20dp"
        android:text="hobbies, occupation, etc."
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/nameBio"
        app:layout_constraintTop_toBottomOf="@+id/nameBio" />

    <TextView
        android:id="@+id/nameBio"
        android:layout_width="166dp"
        android:layout_height="33dp"
        android:layout_marginTop="45dp"
        android:text="John Doe"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/PhotoView"
        app:layout_constraintTop_toBottomOf="@+id/PhotoView" />

    <Button
        android:id="@+id/yes"
        android:layout_width="128dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="10dp"
        android:drawableStart="@drawable/ic_baseline_favorite_24"
        android:fontFamily="sans-serif"
        android:onClick="like"
        android:text="Like"
        android:textSize="20sp"
        android:textStyle="bold"
        android:theme="@style/AppTheme"
        app:layout_constraintEnd_toEndOf="@+id/PhotoView"
        app:layout_constraintStart_toEndOf="@+id/nameBio"
        app:layout_constraintTop_toBottomOf="@+id/PhotoView" />

    <Button
        android:id="@+id/no"
        android:layout_width="128dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="56dp"
        android:drawableStart="@drawable/ic_baseline_thumb_down_24"
        android:onClick="like"
        android:text="Dislike"
        android:textSize="20sp"
        android:theme="@style/AppTheme"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="@+id/yes"
        app:layout_constraintStart_toStartOf="@+id/yes"
        app:layout_constraintTop_toBottomOf="@+id/yes" />


    <ImageButton
        android:id="@+id/imageLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="138dp"
        android:layout_marginBottom="129dp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/PhotoView"
        app:layout_constraintStart_toStartOf="@+id/PhotoView"
        app:layout_constraintTop_toTopOf="@+id/PhotoView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <ImageButton
        android:id="@+id/imageRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/PhotoView"
        app:layout_constraintEnd_toEndOf="@+id/PhotoView"
        app:layout_constraintTop_toTopOf="@+id/PhotoView"
        app:layout_constraintVertical_bias="0.516"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_24" />

    <Button
        android:id="@+id/button3"
        android:layout_width="333dp"
        android:layout_height="48dp"
        android:layout_marginBottom="60dp"
        android:onClick="undo"
        android:text="Undo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/no"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bio1" />

</androidx.constraintlayout.widget.ConstraintLayout>